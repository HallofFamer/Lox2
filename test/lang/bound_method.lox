namespace test.lang

class Scone { 
    topping(first, second){ 
        println("Scone with ${first} and ${second}")
    }
}

println("Testing bound lox method: ")
val scone = Scone()
val topping = scone.topping
println("Invoking bound method 'topping': ")
topping("berries", "cream")
println("class of bound method 'topping': ${topping.getClassName()}")
println("'topping' method's arity: ${topping.arity()}")
println("'topping' method is native: ${topping.isNative()}")
println("'topping' method's name: ${topping.name()}")
println("'topping' method's receiver: ${topping.receiver}")
println("")

println("Testing bound native method: ")
val toString = scone.toString
println("Invoking bound method 'toString': ")
println(toString())
println("class of bound method 'toString': ${toString.getClassName()}")
println("'toString' method's arity: ${toString.arity()}")
println("'toString' method is native: ${toString.isNative()}")
println("'toString' method's name: ${toString.name()}")
println("'toString' method's receiver: ${toString.receiver}")