fun testLocals(){
    val x1 = 5
    println("Creating immutable local variable x1: ${x1}")
    var x2 = 10
    println("Creating mutable local variable x2: ${x2}")
    println("Sum of two variables is: ${x1 + x2}")
    x2 = 20
    println("Setting local variable x2 to 20, and sum is: ${x1 + x2}")
    //x1 = 10
    //println("Setting local variable x1 to 10, this should raise an error.")
    println("")
} 
testLocals()

fun testUpvalues(){  
    val x1 = 5
    println("Creating immutable captured upvalue x1: ${x1}")
    var x2 = 10
    println("Creating mutable captured upvalue x2: ${x2}")

    fun testUpvalueInner(){ 
        println("Sum of two variables is: ${x1 + x2}")
        x2 = 20
        println("Setting local variable x2 to 20, and sum is: ${x1 + x2}")
        //println("Setting local variable x1 to 10, this should raise an error.")
        //x1 = 10 
    }
    testUpvalueInner()
    println("")
}
testUpvalues()

