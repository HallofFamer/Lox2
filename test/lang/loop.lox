namespace test.lang

println("Looping even numbers from 0 to 10 using 'while': ")
var i = 0
while(i <= 10){
    println(i.pow(2))
	i = i + 2
}

println("\nLoop with Break statement using 'while', exiting loop if index > 5: ")
var j = 0
while(true){ 
    if(j > 5) break
    println(j)
    j = j + 1
}

println("\nLoop with Continue statement using 'for', skipping iteration if index % 3 = 0: ")
for(val k : 0..10) { 
    if(k % 3 == 0) continue
    println(k)
}

println("\nLooping through a list of even numbers 2 to 10 using 'for-in': ")
for(val element : [2, 4, 6, 8, 10]){ 
    println("Element: ${element}")
}

println("\nLooping through a list of values using 'for-in' with index: ")
for(val (index, value) : [2, 3.5, true, nil, "Hello World"]){ 
    println("Element ${index}: ${value}")
}

println("\nLooping through a string: ")
for(val char : "Hello World") { 
    println("Char: ${char}")
}

println("\nLooping through a dictionary using 'for-in' with key: ")
for(val (key, value) : ["name": "Joe Doe", "age": 40, "isAdmin": false]){ 
    println("${key}: ${value}")
}