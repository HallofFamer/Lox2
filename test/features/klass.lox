class Point { 

    __init__(Int x, Int y){      
        this.x = x
        this.y = y
    }

    class Point getHorizontal(Int x){ 
        return this(x, 0)
    }

    class Point getVertical(Int y){ 
        return this(0, y)
    }

    Number distance(Point p){ 
        return ((this.x - p.x).pow(2) + (this.y - p.y).pow(2)).sqrt()
    } 

    String toString(){ 
        return "(${this.x}, ${this.y})"
    }
}

Point.origin = Point(0, 0)

