namespace test.features
using clox.std.collection.Array

val array = []
println("Creating empty array: ${array}")
val array2 = Array()
println("Two empty arrays are equal: ${array.equals(array2)}")
println("")

print("Adding elements 2, 3.5, true and 'Hello World': ")
array.add(2)
array.add(3.5)
array[2] = true
array[3] = "Hello World"
println(array)
println("Testing array equality again: ${array.equals(array2)}")

val array3 = [1 + 1, 3.5, true, "hello World".capitalize()]
println("Creating another array using literal: ${array3}")
println("The first and last array are equal: ${array.equals(array3)}")
println(array.equals(array3))
println("")

println("Getting element at index 3: ${array.getAt(3)}")
println("Index of element 'true': ${array.indexOf(true)}")
println("")
array[2] = false
println("Setting element false at index 2: ${array}")
array.insertAt(3, nil)
println("Inserting element nil at index 3: ${array}")
println("")

val element = array.removeAt(1)
println("Remove element at index 1: ${element}")
println("Current array is: ${array}")
array.clear()
println("Clearing array: ${array}")
println(array.toString())
println("")

val array4 = Array.fromElements(1, 2, 3, 4, 5)
println("Creating an array from class methods: ${array4}")
println("New array contains element 2: ${array4.contains(2)}")