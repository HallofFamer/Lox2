FROM alpine:latest

WORKDIR Lox2-2.1.0

RUN apk add git make gcc libc-dev cmake curl-dev libuv-dev --no-cache

RUN git clone -b v2.1.0 https://github.com/HallofFamer/Lox2

RUN cd Lox2 \
	&& mkdir build \
	&& cmake -S . -B ./build \
	&& cmake --build ./build --config Release \
	&& ./build/Lox2 test/benchmarks/fibonacci.lox \
    && cp build/Lox2 /usr/bin/   

CMD ["Lox2"]

# To run the REPL from container, use this command: docker run -w /Lox2-2.1.0/Lox2 -i -t lox2:alpine